<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="380dp"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/Adv_sch_initial_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Starting date\t\t: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Adv_sch_initial_date_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="Select">

            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/Adv_sch_finish_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Ending date\t\t\t: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Adv_sch_finish_date_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="Select"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/Adv_sch_channel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Has Channel\t\t\t: "
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/Adv_sch_channel_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:checked="false"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/Adv_sch_material"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Has Material\t\t\t: "
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/Adv_sch_material_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:checked="false"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/Adv_sch_quiz"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Has Quiz\t\t\t\t\t: "
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/Adv_sch_quiz_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:checked="false"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp">
            <TextView
                android:id="@+id/Adv_sch_comment_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Min Comment\t\t: "
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/Adv_sch_comment_number_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="5"
                />
        </TableRow>


        <EditText
            android:hint="Search bar"
            android:id="@+id/advanced_search_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:text="Advanced Search"
            android:id="@+id/advanced_search_search"
            android:background="@drawable/purplebutton"
            style="@style/dBigButton"/>

    </TableLayout>






</LinearLayout>
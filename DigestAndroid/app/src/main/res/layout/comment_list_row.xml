<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/thumbsUp"
        android:layout_width="@dimen/mid_icon"
        android:layout_height="@dimen/mid_icon"
        android:layout_alignParentLeft="true"
        android:background="@drawable/rate_button_selector"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/comment_body"
        android:textColor="@color/jet"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/thumbsUp"
        android:layout_toEndOf="@id/thumbsUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/comment_rate"
        android:textColor="@color/oil"
        android:layout_width="@dimen/mid_icon"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/thumbsUp"
        android:paddingTop="6dp"
        android:layout_marginRight="@dimen/small_margin" />

    <TextView
        android:id="@+id/comment_owner"
        android:layout_below="@id/comment_body"
        android:textColor="@color/oil"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_toRightOf="@id/comment_rate"
        android:layout_toEndOf="@id/comment_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="digest.digestandroid.fragments.TopicAddQuizFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        style="?android:buttonBarButtonStyle"
        android:id="@+id/button_more_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Add Quiz"

        android:background="@color/primary"
        android:clickable="true"

        android:textSize="15sp"
        android:textColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_recycler_view"
        android:layout_below="@id/button_more_question">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_quiz"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:src="@drawable/ic_done"
        android:onClick="createTopicRequest"
        app:backgroundTint="@color/primary" />

</RelativeLayout>

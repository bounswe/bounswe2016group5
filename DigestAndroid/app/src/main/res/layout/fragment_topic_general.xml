<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="digest.digestandroid.fragments.TopicQuizFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topicImageInfo"
            android:padding="@dimen/et_top_bottom_padding"
            android:layout_marginBottom="@dimen/big_margin">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/topicImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_icon"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_alignParentTop="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topicInfo"
            android:layout_below="@id/topicImageInfo"
            android:background="@drawable/item_box"
            android:padding="@dimen/et_top_bottom_padding"
            android:layout_marginBottom="@dimen/big_margin">

            <ImageView
                android:id="@+id/ivEventDate"
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_alignParentLeft="true"
                android:src="@drawable/default_logo"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_alignParentTop="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tTopicHeader"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/ivEventDate"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_toEndOf="@+id/ivEventDate"
                android:text="Topic Header" />

            <ImageView
                android:id="@+id/ivEventLocation"
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_alignParentLeft="true"
                android:src="@drawable/default_logo"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_below="@id/tTopicHeader"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Topic Creator"
                android:id="@+id/tTopicOwner"
                android:layout_toRightOf="@+id/ivEventLocation"
                android:layout_toEndOf="@+id/ivEventLocation"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_below="@id/tTopicHeader"/>

            <ImageView
                android:id="@+id/ivEventHost"
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:layout_alignParentLeft="true"
                android:visibility="invisible"
                android:src="@drawable/default_logo"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_below="@id/tTopicOwner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rating"
                android:id="@+id/tRating"
                android:visibility="invisible"
                android:layout_toRightOf="@id/ivEventHost"
                android:layout_toEndOf="@id/ivEventHost"
                android:layout_below="@id/tTopicOwner"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Des"
            android:layout_below="@id/topicInfo"
            android:layout_marginBottom="@dimen/big_margin"
            android:padding="@dimen/et_top_bottom_padding"
            android:background="@drawable/item_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:textColor="@color/black"
                android:id="@+id/tDescription"
                android:layout_alignParentTop="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tags"
            android:layout_below="@id/Des"
            android:layout_marginBottom="@dimen/big_margin"
            android:padding="@dimen/et_top_bottom_padding"
            android:background="@drawable/item_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tags"
                android:textColor="@color/oil"
                android:id="@+id/tagsTitle"
                android:textStyle="bold"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/Tags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Related Topics"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textSize="28dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/related_topics_ofa_topic_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
